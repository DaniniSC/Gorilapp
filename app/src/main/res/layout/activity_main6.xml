<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context=".MainActivity6"
    android:background="#BCD979"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- Common -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:baselineAligned="false"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="@string/gorila"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#5E574D"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="107dp"
                    tools:layout_editor_absoluteY="56dp"
                    tools:text="Gorila" />
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:fontFamily="casual"
                    android:text="@string/experiencias_en_tu_comunidad"
                    android:textAlignment="center"
                    android:textStyle="italic"
                    tools:layout_editor_absoluteX="110dp"
                    tools:layout_editor_absoluteY="157dp" />
            </LinearLayout>

            <!-- Title -->
            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Problemática Abordada"
                android:textAlignment="center"
                android:textColor="#422802"
                android:textStyle="bold"
                android:textSize="24sp"
                android:padding="15dp" />

            <!-- Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:baselineAligned="false"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Cuando la gente piensa en vivir experiencias, se imaginan paquetes turísticos con actividades incluídas o disponibles para tomar a través de la agencia de viajes, sin darse cuenta que en su propia comunidad existen actividades que los turistas vienen a realizar todo el tiempo, pero se pierden porque ¿Quién revisa su propia ciudad cuando ingresa a esos sitios?"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/textView100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:textAlignment="center"
                    android:text="Actualmente existen plataformas de economía compartida como Uber y AirBnB que permiten a sus usuarios ocupar y prestar sus vehículos y espacios para generar ingresos y aprovechar servicios interactuando directamente con los proveedores."
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Btn: Volver al menú -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_weight="0"
                android:orientation="vertical">
                <Button
                    android:id="@+id/butto11"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:backgroundTint="#7D6D61"
                    android:fontFamily="sans-serif"
                    android:onClick="IrMenu"
                    android:text="@string/volver_al_men_principal"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>