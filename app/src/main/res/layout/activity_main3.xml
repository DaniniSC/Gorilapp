<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context=".MainActivity3"
    android:background="#BCD979">

    <!-- Titulo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <TextView

            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/gorila"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#5E574D"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="107dp"
            tools:layout_editor_absoluteY="56dp"
            tools:text="Gorila" />
        <!-- Subtitulo -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="309dp"
            android:layout_height="37dp"
            android:fontFamily="casual"
            android:text="@string/experiencias_en_tu_comunidad"
            android:textAlignment="textEnd"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="157dp" />

    </LinearLayout>

    <!-- Espacio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_weight="0"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="421dp"
            android:layout_height="37dp"
            android:fontFamily="serif"
            android:text="Pantalla representativa de la aplicación"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="157dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_weight="0"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:baselineAligned="false">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="382dp"
            android:layout_height="147dp"
            android:layout_marginTop="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.482"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:srcCompat="@drawable/activity3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_weight="0"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:baselineAligned="false">
        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#7D6D61"
            android:fontFamily="sans-serif"
            android:onClick="IrMenu"
            android:text="Volver al menú principal"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="635dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>