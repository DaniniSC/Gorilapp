<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:background="#BCD979">
    <!-- Titulo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <TextView

            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/gorila"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#5E574D"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="107dp"
            tools:layout_editor_absoluteY="56dp"
            tools:text="Gorila" />
        <!-- Subtitulo -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="309dp"
            android:layout_height="37dp"
            android:fontFamily="casual"
            android:text="@string/experiencias_en_tu_comunidad"
            android:textAlignment="textEnd"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="157dp" />

    </LinearLayout>

    <!-- Espacio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_weight="0"></LinearLayout>

    <!-- Boton descripcion -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:baselineAligned="false">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7D6D61"
            android:fontFamily="sans-serif"
            android:onClick="IrDescripcion"
            android:text="Descripción del proyecto"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="169dp"
            tools:layout_editor_absoluteY="646dp" />
    </LinearLayout>

    <!-- Espacio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_weight="0"></LinearLayout>

    <!-- Boton Vista previa -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:baselineAligned="false">

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7D6D61"
            android:fontFamily="sans-serif"
            android:onClick="IrPreview"
            android:text="Vista previa"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="169dp"
            tools:layout_editor_absoluteY="646dp" />
    </LinearLayout>

    <!-- Espacio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_weight="0"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:baselineAligned="false">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:baselineAligned="false">

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7D6D61"
            android:fontFamily="sans-serif"
            android:onClick="IrDiagrama"
            android:text="Diagrama de clases"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="169dp"
            tools:layout_editor_absoluteY="646dp" />
    </LinearLayout>

    <!-- Espacio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_weight="0"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:baselineAligned="false">

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7D6D61"
            android:fontFamily="sans-serif"
            android:onClick="IrCalculo"
            android:text="ACTIVITY 5"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="169dp"
            tools:layout_editor_absoluteY="646dp" />
    </LinearLayout>

    <!-- Espacio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_weight="0"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:baselineAligned="false">

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7D6D61"
            android:fontFamily="sans-serif"
            android:onClick="IrIMC"
            android:text="Cálculo IMC"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="169dp"
            tools:layout_editor_absoluteY="646dp" />
    </LinearLayout>

    <!-- Espacio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_weight="0"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#7D6D61"
            android:fontFamily="sans-serif"
            android:onClick="IrProblematica"
            android:text="Problemática abordada"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="169dp"
            tools:layout_editor_absoluteY="646dp" />

        </LinearLayout>

    <!-- Espacio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_weight="0"></LinearLayout>

</LinearLayout>